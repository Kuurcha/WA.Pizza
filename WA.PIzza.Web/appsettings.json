{
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog", "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq"
        }
      }
    ]

  },

  "Seq": {
    "ServerUrl": "http://seq"
  },
  "ConnectionStrings": {
    "Default": "Server=mssql;Database=WebApiDB;User Id=SA;Password=Test_Password1;"
  }
}
